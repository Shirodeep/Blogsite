<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header')%>
<body>
 
    <%- include('./partials/navigation.ejs') %>
 
    <div class="blogs-content">
        <h2>All blogs</h2>
        <% if(blogs.length > 0){ %>
            <% blogs.forEach (blogs =>{ %>
              <a class="single-blog-homepage" href="/blogs/<%= blogs.id %>">
                <h3 class = "title"><%= blogs.title %></h3>
                <p class ="discription"><%= blogs.discription %></p>
              </a>
                <%})%>
        <% } else{ %>
            <h2>Content not found.</h2>
        <% } %>
    </div>
   
    <%- include('./partials/footer.ejs') %>
</body>
</html>